<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_cuadrado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Largo de un Cuadrado"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etxt_largo_cuadrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_calc_cuadrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Area de un Cuadrado" />

        <TextView
            android:id="@+id/txtv_area_cuadrado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_regresar_cuadrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>