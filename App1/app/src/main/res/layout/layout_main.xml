<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_cuadrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Area de un Cuadrado"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/btn_rect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Area de un Rectangulo"
                android:textSize="22dp"/>
            <Button
                android:id="@+id/btn_trian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Area de un Triangulo"
                android:textSize="22dp" />
            <Button
                android:id="@+id/btn_circulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Area de un Circulo"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btn_terreno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Precio de un terreno por Metro cuadrado"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btn_acercaDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acerca de "
                android:textSize="22dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>