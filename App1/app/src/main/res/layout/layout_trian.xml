<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_trian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Largo de la Base"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/etxt_largo_triangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Altura del Triangulo"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/etxt_altura_triangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_calc_triangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Area del Triangulo" />

        <TextView
            android:id="@+id/txtv_area_triangulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btn_regresar_triangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>