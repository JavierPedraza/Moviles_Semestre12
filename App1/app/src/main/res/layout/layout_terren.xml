<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_terren">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Largo del Terreno"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/etxt_largo_terreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Ancho del terreno"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/etxt_ancho_terreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Precio por metro Cuadrado"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/etxt_preciom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_cal_terreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Precio" />

        <TextView
            android:id="@+id/txtv_preciototal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btn_regresar_terreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>